doctype html
html(lang="en")
  head
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous")
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Login
  
  nav.navbar.navbar-expand-lg.navbar-light.bg-light
    .container
      a.navbar-brand.text-center.me-2(href='/') Global Affairs Desk
      button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse.justify-content-end
        ul.nav.nav-tabs
          li.nav-item
            a.nav-link(aria-current='page' href='/') Home
          li.nav-item
            a.nav-link(href='/blogs') Blogs
          if !user
            li.nav-item 
              a.nav-link(href='/sign-up') Sign Up
            li.nav-item 
              a.nav-link.active(href='/login') Login
          if user
            li.nav-item
                a.nav-link(href='/blogs/new/post') New Blog
            li.nav-item
                a.nav-link(href='/logout') Logout

  body.bg-dark.vh100
  .d-flex.justify-content-center.align-items-center.mb-5
    .container.mt-5
      h1#pug-vairable.text-light= user
      h1.text-center.text-light.my-auto.mb-0 Login
      pug#variable.text-light.fs-4
      form(action="/login" method="POST")
        .form-group.mb-3
          label.text-light(for="username") Username:
          input.form-control(type="text" name="username" id="username" required)
        .form-group.mb-3 
          label.text-light(for="password") Password
          input.form-control(type="password" name="password" id="password" required)
            
        button.btn.btn-primary.m-1(type="submit") Submit

        
    
  include _footer.pug

