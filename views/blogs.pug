doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet" href="/style.css" type='text/css')
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous")
    title Blogs
  
  nav.navbar.navbar-expand-lg.navbar-light.bg-light
    .container
      a.navbar-brand.text-center.me-2(href='/') Global Affairs Desk
      button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse.justify-content-end
        ul.nav.nav-tabs
          li.nav-item
            a.nav-link(aria-current='page' href='/') Home
          li.nav-item
            a.nav-link.active(href='/blogs') Blogs
          if !user
            li.nav-item 
              a.nav-link(href='/sign-up') Sign Up
            li.nav-item 
              a.nav-link(href='/login') Login
          if user
            li.nav-item
                a.nav-link(href='/blogs/new/post') New Blog
            li.nav-item
                a.nav-link(href='/logout') Logout
            
  body.bg-dark  

    .container.pt-4
      h1.d-flex.justify-content-center.text-light Blogs

      div.mb-4
        each val, index in det
          .mt-4.bar-rad.bg-light
            .card-body
              h1.card-title= val.title
              .class-subtitle.text-muted.mb-4
                h6= val.date.toLocaleDateString()
              .card-text.mb-2
                h5= val.description
                a.btn.btn-primary.mt-2(href=`/blogs/read/${val.slug}`) Read More
    
    include _footer.pug